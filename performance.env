# Database Configuration
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/document_rag

# OpenAI API Key
OPENAI_API_KEY=your_openai_api_key_here

# Performance Configuration
REDIS_URL=redis://localhost:6379
ENABLE_RATE_LIMITING=true
ENABLE_CACHING=true

# Request Timeouts (seconds)
DEFAULT_TIMEOUT=30.0
QUERY_TIMEOUT=25.0
INGEST_TIMEOUT=60.0

# Concurrency Limits
MAX_CONCURRENT_REQUESTS=20
MAX_QUERY_CONCURRENT=5
MAX_INGEST_CONCURRENT=3
THREAD_POOL_SIZE=4

# Cache Settings
CACHE_TTL=300

# Rate Limits (requests per time window)
QUERY_RATE_LIMIT=10
QUERY_RATE_WINDOW=60
INGEST_RATE_LIMIT=5
INGEST_RATE_WINDOW=300
HEALTH_RATE_LIMIT=60
HEALTH_RATE_WINDOW=60
DEFAULT_RATE_LIMIT=100
DEFAULT_RATE_WINDOW=60

# Performance Monitoring
ENABLE_PERFORMANCE_LOGGING=true
SLOW_REQUEST_THRESHOLD=1.0
GZIP_MINIMUM_SIZE=1000

# Production Settings
ENVIRONMENT=development
LOG_LEVEL=INFO
